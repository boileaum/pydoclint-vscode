{
  "name": "pydoclint",
  "displayName": "Pydoclint",
  "description": "VS Code extension that integrates pydoclint for real-time Python docstring diagnostics",
  "version": "0.2.2",
  "publisher": "boileaum",
  "author": {
    "name": "Matthieu Boileau",
    "email": "matthieu.boileau@math.unistra.fr"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boileaum/pydoclint-vscode"
  },
  "bugs": {
    "url": "https://github.com/boileaum/pydoclint-vscode/issues"
  },
  "homepage": "https://github.com/boileaum/pydoclint-vscode",
  "keywords": [
    "python",
    "docstring",
    "linter",
    "pydoclint",
    "documentation"
  ],
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pydoclint.checkFile",
        "title": "Pydoclint: Check Current File"
      },
      {
        "command": "pydoclint.checkWorkspace",
        "title": "Pydoclint: Check Workspace"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Pydoclint",
      "properties": {
        "pydoclint.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable pydoclint diagnostics"
        },
        "pydoclint.style": {
          "type": "string",
          "enum": [
            "google",
            "numpy",
            "sphinx"
          ],
          "default": "google",
          "description": "Docstring style to validate"
        },
        "pydoclint.configFile": {
          "type": "string",
          "default": "pyproject.toml",
          "description": "Path to pydoclint configuration file"
        },
        "pydoclint.ignoreVirtualEnv": {
          "type": "boolean",
          "default": true,
          "description": "If true, pydoclint will ignore files located inside common virtual environment folders (venv, .venv, env, .env, etc.)"
        },
        "pydoclint.ignorePaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of glob patterns to ignore (e.g. [\"**/site-packages/**\", \"**/.venv/**\"]). Patterns follow minimatch syntax."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "minimatch": "^9.0.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
